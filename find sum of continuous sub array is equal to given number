    public static void main(String[] args) {
        int arr[] = {2,5,1,3,3,3,4,3,2,3,6,0,7,1,0};
        int num = 8;
        for (int i = 0;i<arr.length-2;i++){
            if (arr[i] + arr[i+1] + arr[i+2] == num ){
                System.out.println(arr[i] + " " + arr[i+1] + " " + arr[i+2]);
            }
        }
    }
