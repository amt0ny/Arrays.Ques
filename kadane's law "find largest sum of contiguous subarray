    public static void main(String[] args) {
        int arr[] = {5,-4,-2,6,-1,7,2};
        int cursum = 0;
        int maxsum = 0;
        for (int i = 0;i<arr.length;i++){
            cursum += arr[i];
            if (maxsum < cursum){
                maxsum = cursum;
            }
            if (cursum < 0){
                cursum = 0;
            }
        }
        System.out.println(maxsum);
    }
